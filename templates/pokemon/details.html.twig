{% extends 'base.html.twig' %}

{% block title %}Hello {{ pokemon.name }}{% endblock %}

{% block body %}

    <div class="back_bar">
    <a href="{{ path('home') }}">Revenir a la liste des Pok√©mon</a>
    </div>

    <h1>{{ pokemon.name|capitalize }}'s card !</h1>
    <div class="fiche">

        <div class="profile_header">
            <img id="picture" src="{{ pokemon.sprites.other["official-artwork"].front_default }}" alt="">
            <div class="pokemon_name">
                <p><b>{{ pokemon.name|capitalize }}</b></p>
                <p id="index"><b>#{{ pokemon.id }} </b></p>
                {% for type in pokemon.types %}
                    <span>{{ type.type.name|upper }}</span>
                {% endfor %}
            </div>
        </div>
        <div class=""></div>
    </div>

{% endblock %}
